/*  single book page   */
.backhome
  float:right
  a
    border-bottom:2px solid transparent
    &:hover
      border-bottom:2px solid highlight
.book-single
  max-width:960px
  .bk
    width:480px
    background: transparent
    position: relative 
    float:left
  .title input
    color: primary
    font-weight: 300
    font-size:24px
    width:100%
    padding:3px
  .type
    display:inline-block
    background:primary
    padding:6px
    color:white
    position: absolute
    top:0
    right:0
  .created-at, .created-at *
    font-size:9px
    background: lighten(bkg, 80%)
    padding:2px
    color: primary
  input
    font-size:14px
    padding:6px
    &.save 
      min-width:40px
    &:focus
      outline: primary auto 5px;
  textarea
    font-size:14px
    border:none
    width:98%
    background: lighten(primary, 90%) 
  .plus
    margin-right:10px
  .infocolumn
    display:inline-block
    vertical-align: top
    width:234px
    padding:3px
    color: primary
    font-size:16px 
    background: wht 
    input
      min-width:140px
      color: primary
      font-size:16px
  .quotes
    background: lighten(primary, 80%)
    padding:6px
    .quote
      margin:8px 0
  .notes
    background: desaturate(secondary, 80%)
    padding:6px
  .link
    background: bkg
    padding:6px
    font-size:14px 
    display:inline-block
    margin-right:3px
  .tag
    background: primary
    input
      color:wht
      cursor:pointer
    font-size:16px
    padding:3px
    display:inline-block
    margin-right:3px 
  div 
    margin:8px 0
  #editBookSubmit
    display:inline-block
  .new-attribute
    background:bkg
    padding:8px
    textarea
      margin-left: 4px
      padding:6px
      width:400px
    .label
      text-transform:capitalize
      margin-left: 4px;
      padding: 6px;
  #atts-container
    display:none
    margin-top:16px
    position:relative
    .atts 
      background: secondary
      display inline-block
      padding:3px
      color:white 
      margin:3px 3px 3px 0
      cursor:pointer
    .cancel
      background: primary
      color: white
      padding:3px
      cursor:pointer
  .new-attribute
    position:relative
  #cancel-att
    position:absolute 
    top:10px
    right:10px
  .hidecontents
    position: relative 
    span
      position:absolute
      right:10px
      cursor:pointer
    .hiddencontents
      display:none 
  .refs
    width:360px
    clear:right
    float:right
    background: lighten(bkg, 50%)
    padding:6px
    .h1
      color:primary
      font-size:18px
    .title 
      color:primary
      padding:0
    .addref
      display:none
    select
      margin:3px
     

    

