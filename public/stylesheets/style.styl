@import "reset.css"

primary = #8181C7
secondary = #f3f
highlight = #fdf
bkg = #E0E0E0
wht = #fff

/*  globes   */
body
  padding: 50px
  font: 14px Helvetica, Arial, sans-serif
  background: url('/images/bkg-dot-sm.jpg')
a
  color: secondary
  text-decoration:none
a:hover
  border-bottom:2px solid highlight
.clickable
  padding: 6px
  font-size:16px
  background: highlight
  display:inline-block
  cursor:pointer
  text-align:center
  border-radius: 4px
  &:hover
    border:none 
.underlined
  margin:0 3px
  border-bottom:1px solid black
  padding:0 !important
  &:focus
      outline:none !important
input
  &:focus
      outline: primary auto 5px;
  &[type="submit"]
    cursor:pointer
    border-bottom:2px solid transparent
    &:hover
      border-bottom:2px solid highlight
.cf 
  clear:both
  height:10px

  
/*  index */
#books
  margin-top:8px
  .search, .browse, .menu
    display: inline
  .search form, .browse form
    display: inline
    margin-right: 1em
  .title button
    color: primary
    font-size:20px
    margin:6px 0
    cursor:pointer
    background: transparent
    border:none
    text-align:left
    padding:2px
    &:hover
      text-decoration: underline
    &:focus
      outline:none
  .name 
    color: black
  .genre
    color: primary
  input[name="_query"]
    font-size:24px
  select
    margin-right:12px
  div
    /*margin-top:12px*/
  .refd
    width:200px
    float:left
    input[value="Save"]
      display:block

.menu
  a 
    margin:3px 6px 3px 0
#delete
  width:60px
  position: absolute
  top: 6px
  right: 6px

  
/*  new reference page */
.nothing 
  margin: 12px 0
.book
  /*background: lighten(secondary, 60%)*/
  padding: 6px;
  border: 1px solid primary
  border-radius: 6px
  margin-right:6px
  margin-bottom:6px
  position:relative
  &:hover
    background: rgba(lighten(secondary, 60%), 0.5)
  div
    margin:3px 0
  .title
    color: primary
    font-size:18px
    margin: 0
    width:80%
  .note
    width:140px
    height:90px
    background:bkg 
    margin:3px 0 
.browsedbook
  margin:16px 0
  textarea
    vertical-align: middle;
    margin: 4px;
  .title
    color: primary
    font-size:18px
  .browsekey
    background:bkg 
    margin:3px 0 
    padding:6px
  input[value="Save"]
      display:block

/*  single book page   */
.backhome
  a
    border-bottom:2px solid transparent
    &:hover
      border-bottom:2px solid highlight
.book-single
  max-width:960px
  .bk
    width:300px
    background: transparent
    position: relative 
    float: left
  .title input
    color: primary
    font-weight: 300
    font-size:24px
    width:290px
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding:3px
  .type
    display:inline-block
    background:primary
    padding:6px
    color:white
  .created-at, .created-at *
    background: bkg
    padding:2px
    color: primary
  input
    font-size:14px
  input[type="text"]
    border: 1px solid primary
    border-radius: 3px
    margin: 6px 0
    padding: 3px 3px
    &.save 
      min-width:40px
    &:focus
      outline: primary auto 5px;
  textarea
    font-size:14px
    border:none
    width:98%
    background: lighten(primary, 85%) 
  .plus
    margin-right:10px
  .infocolumn
    vertical-align: top
    font-size:16px 
    input
      min-width:140px
      color: primary
      font-size:16px
  .notes-column
    margin-left: 320px
    padding-top: 10px
    
  .quotes
    border: 1px solid primary
    border-radius: 6px
    padding:6px
    .quote
      margin:8px 0
  .notes
    border: 1px solid secondary
    border-radius: 6px
    padding:6px
  .link
    padding: 2px
    font-size:18px
    display:inline-block
    margin-right:3px
    border-radius: 3px
  .tag
    background: primary
    border-radius: 3px
    input
      color:wht
      cursor:pointer
    font-size:16px
    padding:3px
    display:inline-block
    margin-right:3px 
  div 
    margin:8px 0
  #editBookSubmit
    /*display:inline-block*/
  .new-attribute
    background:bkg
    padding:8px
    textarea
      margin-left: 4px
      padding:6px
      width:400px
    .label
      text-transform:capitalize
      margin-left: 4px;
      padding: 6px;
  #atts-container
    display:none
    margin-top:16px
    position:relative
    .atts 
      background: secondary
      display inline-block
      padding:3px
      color:white 
      margin:3px 3px 3px 0
      cursor:pointer
    .cancel
      background: primary
      color: white
      padding:3px
      cursor:pointer
  .new-attribute
    position:relative
  #cancel-att
    position:absolute 
    top:10px
    right:10px
  .hidecontents
    position: relative 
    span
      position:absolute
      right:10px
      cursor:pointer
    .hiddencontents
      display:none 
  .refs
    border: 1px solid bkg
    border-radius: 6px
    padding:6px
    .h1
      color:primary
      font-size:18px
    .title 
      color:primary
      padding:0
    .addref
      display:none
    select
      margin:3px
    .by input[type="submit"]
      width:100%
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
     

    

/* NEW BOOK */
.newbook 
  width:640px
  background:transparent
  margin-top:16px
  #book
    float:left
  div
    margin:6px 0
  .label
    width:75px
    dislay:block
    text-decoration:center 
  .in
    background: bkg
    padding:6px
    margin:3px 0
    font-size:18px
  .newtype
    font-size:18px
    
/* smaller than 800px styles */
@media only screen and (max-width : 800px)
  .book-single .notes-column
    clear:left
    margin-left: 0

    
/* iphone 5 styles*/    
@media only screen and (min-device-width : 320px) and (max-device-width : 568px)
  body
    padding:0
  .search
    input
      display:block
      margin:8px
  .book
    margin:0
    float:none
    height:auto
    width:266px 
    #delete
      display:none
  .book-single
    .bk
      width:300px
    .refs
      width:300px
  .notes-column
    margin-left: 0


    

