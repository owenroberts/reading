@import "reset.css"

primary = #8181C7
secondary = #c9aff9
highlight = #fdf
bkg = #f5f5f5
wht = #fff

/*  globes   */
*
	box-sizing: border-box
body
	font: 14px/14px Verdana, Helvetica, Arial, sans-serif
	line-height:1.4
	background: url('/images/bkg-dot-sm.jpg')
#wrap
	max-width:800px
	margin:0 auto
#index
.book-single
.newbook
	background: #efefef 
	margin-top:1em
	padding:1em 2em
*:focus
	outline:none
h1, h2, h3
	font-weight:normal
	background: wht
	padding:0.25em .5em
	box-shadow: -2px 2px 0 primary
a
	color: inherit
	text-decoration:none
a:hover
	/*border-bottom:2px solid highlight*/
input[type="submit"]
	cursor:pointer
button
	text-align: left
	font-family:Verdana
	border:none
	background: transparent
	cursor:pointer
	padding:0
	&:focus
		outline:none
.box
	box-shadow: -2px 2px 0 primary
	background: wht
	padding: 0.25em .5em;
.title
	font-size:18px
.clickable
	font-size:inherit
	font-family: inherit
	background: highlight
	display:inline-block
	margin-right:0.5em
	cursor:pointer
	text-align:center
	box-shadow: -2px 2px 0 primary
	padding: .5em 1em
	transition: background-color 300ms
.clickable:hover
	background-color: secondary
a.clickable:hover
	border-bottom: none
textarea
	resize:none
	border:none
	background: lighten(primary, 85%)
	font-size:14px

select
	-webkit-appearance: button;
	-webkit-border-radius: 0;
	box-shadow: -2px 2px 0 primary
	-webkit-padding-end: 20px;
	-webkit-padding-start: 2px;
	background-image: url(/images/drop.svg);
	background-color:wht;
	background-repeat: no-repeat;
	background-position: 90% center;
	background-size: 1em;
	border: none
	font-size: inherit;
	font-family: inherit
	padding: .5em 1em
	white-space: nowrap;

.book
	min-width: 100px
	width:30%
	display:inline-block
	background:wht
	margin-right:1em
	padding:0.5em
	box-shadow: -2px 2px 0 primary
	vertical-align:top
	div
		margin:.5em 0
	margin-bottom: 2em
.refd
	float:left
	background:bkg
	box-shadow: -2px 2px 0 primary
	padding:1em
	margin-right:1em
	input
	textarea
	div
		font-size:14px
		margin: 0.5em 0
	input[value="Save"]
		display:block
	
/*  index */
#index
	.search
	.browse
		display:block
	.search input
	.search select
	.browse input
	.browse select
		margin-bottom: 1em
		margin-right: 1em
		display:inline-block
	.search form, .browse form
		margin-right: 1em
	.name 
		color: black
	.genre
		color: primary
	input[name="_query"]
		box-shadow: -2px 2px 0 primary
		font-size:18px
		background: wht
		padding: 0.25em .5em; 
	.add
		margin-bottom: 2em
	.title a
		color: primary
		font-size: 18px
		&:hover
			background-color: secondary
	a.tag
		background-color: highlight
		padding:0.25em 0.5em
		transition: background-color 300ms
		&:hover
			background-color: secondary
	
		

/*  single book page   */    
.book-single
	.bk
		background: transparent
		position: relative 
	.title input
		font-size:36px
		width:100%
		text-overflow: ellipsis;
	.type
		display:inline-block
		background:highlight
		padding:3px 6px
		color:white
	.created-at
		font-size: 12px
		margin-left:1em
		display:inline-block
		color: gray
	.name
	.genre
		width:25%
	.delete
		font-size: 12px
	.name
	.pubdate
	.genre
	.readdate
		font-size:12px
		color:gray
		display:inline-block
		input
			font-size:14px
	input[type="text"]
		&.save 
			min-width:40px
		&:focus
			outline: none;
			border-bottom:1px solid primary;

    
	.plus
		margin-right:10px
	.notes-column
		padding-top: 10px
	.notes
	.quotes
		.note
		.quote
			background:bkg
			margin:1em 0
			width:30%
			margin-right:1em
			display:inline-block
			vertical-align:top
			box-shadow: -2px 2px 0 primary
			padding-right:3em
			textarea
				width:100%
	.hidecontents
		position: relative
		height:26px
		overflow:hidden
		span
			position:absolute
			right:10px
			cursor:pointer
			
	.link
	.tag
		padding: 2px
		display:inline-block
		margin-right:3px
		font-size:18px
		a
			font-size:18px
		input
			font-size:18px
			color:secondary
	 		cursor:pointer
	div 
		margin:0.25em 0

	.new-attribute
		background:bkg
		padding:8px
		.label
			text-transform:capitalize
			padding: 6px 0;
	#atts-container
		display:none
		margin-top:16px
		position:relative
		.atts 
			background: highlight
			display inline-block
			margin:3px 0 3px 3px
			padding:0.25em
			cursor:pointer
		.cancel
			background: secondary
			border-radius: 0.25em
			margin:.5em
			color: white
			padding:0.25em
			cursor:pointer
	.new-attribute
		position:relative
	#cancel-att
		position:absolute 
		top:10px
		right:10px
	.refs
		margin:2em 0
		input.title
			font-size:14px
		.book
			margin-right:1em
		.h1
			color:primary
			font-size:18px
		.title 
			color:primary
			padding:0
		.addref
			display:none
	select
		margin:3px
	.by input[type="submit"]
		width:100%
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
     
/*  new reference page */
.nothing 
	margin: 12px 0
	div
		margin:3px 0
	.title
		color: primary
		font-size:18px
		margin: 0
		width:80%
	.note
		width:140px
		height:90px
		background:bkg 
		margin:3px 0 

    

/* NEW BOOK */
.newbook
	div
	input
		display: block
		margin-bottom: 1em
		margin-right: 1em
		font-size:18px
	.addtype
		display: inline-block
	

    
/* smaller than 800px styles */
@media only screen and (max-width : 800px)
	.book-single .notes-column
		clear:left
		margin-left: 0

    
/* iphone 5 styles*/    
@media only screen and (min-device-width : 320px) and (max-device-width : 568px)
	body
		padding:0
	#wrap
		margin-top:2em
	.search
		input
			display:block
			margin:8px
	.book
		margin:0
		float:none
		height:auto
	.book-single
		.name
		.genre
		.pubdate
		.readdate
			width: 50%
		.delete
			display:none
		.notes .note
		.quotes .quote
			width: 100%

	.notes-column
		margin-left: 0