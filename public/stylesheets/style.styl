@import "reset.css"

primary = #8181C7
secondary = #f3f
highlight = #fdf
bkg = #E0E0E0

/*  globes   */
body
  padding: 50px
  font: 14px Helvetica, Arial, sans-serif
  background: darken(bkg, 15%)
a
  color: secondary
  text-decoration:none
a:hover
  border-bottom:2px solid highlight
.clickable
  padding: 6px
  font-size:16px
  background: highlight
  display:inline-block
  cursor:pointer
  text-align:center
input
  &:focus
      outline: primary auto 5px;
  
/*  index */
#books
  width:640px
  div, form
    margin: 8px 0
  .title input
    color: primary
    font-size:24px
    margin:6px 0
    cursor:pointer
    border-bottom:2px solid transparent
    &:hover
      border-bottom:2px solid highlight
    &:focus
      outline:none
.book 
	padding:3px
	margin:3px 0

.menu
  a 
    margin:3px 6px 3px 0
#delete
  width:60px

/*  single book page   */
.book-single
  width:640px
  background: transparent 
  .title input
    color: primary
    font-weight: 300
    font-size:24px
    width:100%
    padding:3px
  .created-at, .created-at *
    font-size:9px
    background: lighten(bkg, 80%)
    padding:2px
  input
    color: black
    font-size:14px
    min-width:400px
    &.save 
      min-width:40px
    &:focus
      outline: primary auto 5px;
  textarea
    font-size:14px
    border:none
    width:98%
    background: lighten(primary, 90%) 
  .plus
    margin-right:10px
  .infocolumn
    display:inline-block
    vertical-align: top
    width:260px
    padding:3px
    input
      min-width:140px
  .quotes
    background: lighten(primary, 80%)
    padding:6px
    .quote
      margin:8px 0
  div 
    margin:8px 0
  #editBookSubmit
    display:inline-block
  .new-attribute
    background:bkg
    padding:8px
    textarea
      margin-left: 4px
      padding:6px
      width:400px
    .label
      text-transform:capitalize
      margin-left: 4px;
      padding: 6px;
  #atts-container
    display:none
    margin-top:16px
    position:relative
    .atts 
      background: secondary
      display inline-block
      padding:3px
      color:white 
      margin:3px 3px 3px 0
      cursor:pointer
    .cancel
      background: bkg
      color: white
      padding:3px
      cursor:pointer
  .new-attribute
    position:relative
  #cancel-att
    position:absolute 
    top:10px
    right:10px
    
      

    

