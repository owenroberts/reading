@import "reset.css"

primary = #8181C7
secondary = #f3f
highlight = #fdf
bkg = #E0E0E0
wht = #fff

/*  globes   */
body
  padding: 50px
  font: 14px Helvetica, Arial, sans-serif
  background: url('/images/bkg-dot-sm.jpg')
a
  color: secondary
  text-decoration:none
a:hover
  border-bottom:2px solid highlight
.clickable
  padding: 6px
  font-size:16px
  background: highlight
  display:inline-block
  cursor:pointer
  text-align:center
  &:hover
    border:none 
.underlined
  margin:0 3px
  border-bottom:1px solid black
  padding:0 !important
  &:focus
      outline:none !important
input
  &:focus
      outline: primary auto 5px;
  &[type="submit"]
    cursor:pointer
    border-bottom:2px solid transparent
    &:hover
      border-bottom:2px solid highlight
.cf 
  clear:both
  height:10px

  
/*  index */
#books
  margin-top:8px
  .title button
    color: primary
    font-size:24px
    margin:6px 0
    cursor:pointer
    background: transparent
    border:none
    text-align:left
    padding:2px
    &:hover
      background-color: highlight
    &:focus
      outline:none
  input[name="_query"]
    font-size:24px
  select
    margin-right:12px
  div
    margin-top:12px

.menu
  a 
    margin:3px 6px 3px 0
#delete
  width:60px

  
