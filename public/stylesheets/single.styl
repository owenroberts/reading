.book-single
	.bk
		background: transparent
		position: relative 
	.title input
		font-size:36px
		width:100%
		text-overflow: ellipsis;
		border-bottom: 1px solid transparent
	.type
		display:inline-block
		background: wht
		font-size:0.75em
	#status 
		font-style:italic
		opacity: 1
		display:inline-block
		margin: 0 1em
		transition: opacity 300ms
		&.fadeIn
			opacity: 1
		&.fadeOut
			opacity: 0
			transition-delay: 1000ms
	.created-at
		font-size: 12px
		margin-right:1em
		display:inline-block
		color: gray
	.delete
		font-size:0.75em
		padding: 0.25em 0.5em;
		margin-left: 1em
		color: gray
		&:hover
			color: palevioletred
	.name
	.pubdate
	.genre
	.readdate
		float:left
		min-width: 100px
		font-size:12px
		color:gray
		display:inline-block
		input
			font-size:14px
	input[type="text"]
		&.save 
			min-width:40px
		&:focus
			outline: none;
			border-bottom:1px solid primary;
	.plus
		margin-right:10px
	.notes
	.quotes
		.note
		.quote
			background: lighten(primary, 40%)
			margin:1em 0
			width:30%
			margin-right:1em
			display:inline-block
			vertical-align:top
			box-shadow: -2px 2px 0 primary
			padding-right:3em
			padding-left: 0.25em;
			textarea
				width:100%
			span
				color: wht
	.hidecontents
		position: relative
		height:26px
		overflow:hidden
		span
			position:absolute
			right:10px
			cursor:pointer
			
	.link
	.tag
		display:inline-block
		margin-right:3px
		padding: 0.125em .25em
		a
			font-size:0.75em
	div 
		margin:0.25em 0
		margin-right:1px

	.new-attribute
		background:bkg
		padding:8px
		box-shadow: -2px 2px 0 primary
		position:relative
		input
			font-size: 1em
			display: block
			width: 50%
			margin-bottom: 1em			
			
		.label
			text-transform:capitalize
			padding: 6px 0;
		textarea
			resize: auto
			width: 75%
		#cancel-att
			position:absolute 
			top:40px
			right:10px
			font-size: 0.62em
		#save-att
			position:absolute 
			top:10px
			right:10px
			font-size: 0.75em
				
	#atts-container
		display:none
		position:relative
		box-shadow: -2px 2px 0 primary
		background: wht
		margin: 0.25em 0;
		padding: 0.5em 0.25em;
		.atts 
			background: highlight
			display inline-block
			margin:3px 0 3px 3px
			padding:0.25em
			cursor:pointer
			transition: color 150ms
			&:hover 
				background: primary
				color: wht
		.cancel
			background: secondary
			border-radius: 0.25em
			margin:.5em
			color: white
			padding:0.25em
			cursor:pointer
			&:hover 
				background: primary
		

	.refs
		margin:2em 0
		input.title
			font-size:14px
		.book
			margin-right:1em
		.h1
			color:primary
			font-size:18px
		.title 
			color:primary
			padding:0
		.addref
			display:none
	select
		margin:3px
	.by input[type="submit"]
		width:100%
		white-space: nowrap
		overflow: hidden
		text-overflow: ellipsis
     
/*  new reference page */
.nothing 
	margin: 12px 0
	div
		margin:3px 0
	.title
		color: primary
		font-size:18px
		margin: 0
		width:80%
	.note
		width:140px
		height:90px
		background:bkg 
		margin:3px 0 