extends layout

block content

	div#books
		.menu
			a.clickable(href="/")!= "Back to Book List"
		h3=title
		each book in books
			div.book
				div.title
					form( method="get", action="book/:id/edit")
						input(name="_id", type="hidden", value=book._id.toHexString())
						button(type="submit")=book.title
				div.name="by "+ book.name
				div.genre= book.genre
				
				form#delete( onsubmit="return confirm('Are you sure?');" method="post", action="/book/:id/delete")
					input(name="_id", type="hidden", value=book._id.toHexString())
					input.clickable(id="delete", value="Delete", type="submit")
